    "@babel/preset-env": "^7.12.1",
    "babel-polyfill": "^6.26.0",
    "bcrypt": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "lowdb": "^1.0.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "cpx": "^1.5.0"
  }
